<div data-controller="email">
    <label data-email-target="label" for="email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Email</label>
    <input data-email-target="input" type="text" id="email" class="block w-full p-4 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 text-base focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Email">
    <p data-email-target="description" class="hidden"><span class="font-medium">Oh, snapp!</span> Some error message.</p>
    <label data-email-target="label" for="firstName" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">FirstName</label>
    <input data-email-target="input" type="text" id="firstName" class="block w-full p-4 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 text-base focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="FirstName">
    <label data-email-target="label" for="lastName" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">LastName</label>
    <input data-email-target="input" type="text" id="lastName" class="block w-full p-4 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 text-base focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="LastName">

    <button data-action="email#submit" type="button" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Default</button>
</div>
